<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shofy - Multipurpose eCommerce Angular Template</title>
    <link rel="icon" href="~/assets/icons/head-icon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/assets/sass/home.css">
</head>
<body>



    <header>
        <section id="header-up">
            <div class="container-main">
                <div class="row">
                    <div class="col-6">
                        <div class="left-side">
                            <img src="~/assets/icons/car-icon.svg" alt="">
                            <p>FREE Express Shipping On Orders $570+</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="right-side">
                            <ul>
                                <li>
                                    <a class="content">English<i class="fa-solid fa-angle-down"></i></a>
                                    <div class="content-menu">
                                        <ul>
                                            <li><a href="">Spanish</a></li>
                                            <li><a href="">Russian</a></li>
                                            <li><a href="">Portuguese</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <a class="content">USD<i class="fa-solid fa-angle-down"></i></a>
                                    <div class="content-menu">
                                        <ul>
                                            <li><a href="">EUR</a></li>
                                            <li><a href="">CHF</a></li>
                                            <li><a href="">GBP</a></li>
                                            <li><a href="">KWD</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li>
                                    <a class="content">Setting<i class="fa-solid fa-angle-down"></i></a>
                                    <div class="content-menu">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <ul>
                                                <li>
                                                    <form asp-controller="Account" asp-action="Logout">
                                                        <button type="submit" class="btn btn-danger">Logout</button>
                                                    </form>
                                                </li>
                                            </ul>
                                        }else
                                        {
                                            <ul>
                                                <li><a href="">Wishlist</a></li>
                                                <li><a href="">Cart</a></li>

                                            </ul>
                                        }
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <section id="header-middle">
            <div class="container-main">
                <div class="row">
                    <div class="col-2">
                        <div class="logo">
                            <a href="home.html"><img src="~/assets/icons/logo.svg" alt=""></a>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="searching">
                            <div class="content">
                                <input type="text" placeholder="Search for Products...">
                                <div class="vertical-line"></div>
                                <div class="select">
                                    <a class="selecting">Select Category<i class="fa-solid fa-angle-down"></i></a>
                                    <div class="selecting-menu">
                                        <ul>
                                            <li>Select Category</li>
                                            <li><a href="">Electronics</a></li>
                                            <li><a href="">Fashion</a></li>
                                            <li><a href="">Beauty</a></li>
                                            <li><a href="">Jewelry</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="search-icon">
                                    <img src="~/assets/icons/search-icon.svg" alt="">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="account">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="login-icon d-flex justify-content-center" style="padding:40px;gap:12px">
                                    <img src="~/assets/icons/login-icon.svg" alt="">
                                    <span>@User.Identity.Name</span>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="SignUp">
                                    <div class="login-icon">
                                        <img src="~/assets/icons/login-icon.svg" alt="">
                                    </div>
                                    <div class="content">
                                        <p>Hello, Sign In</p>
                                        <p>Your Account</p>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>

                    <div class="col-1">
                        <div class="actions">
                            <a href="" class="updownarrow">
                                <img src="~/assets/icons/UpDownArrow-iocn.svg" alt="">
                            </a>
                            <a href="" class="wishlist">
                                <img src="~/assets/icons/wishlist-icon.svg" alt="">
                                <span class="wishlist-count">0</span>
                            </a>
                            <a href="" class="cart">
                                <img src="~/assets/icons/cart-icon.svg" alt="">
                                <span class="cart-count">0</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <section id="header-down">
            <div class="container-main">
                <div class="row">
                    <div class="col-3">
                        <div class="all-categories">
                            <img src="~/assets/icons/bar-icon.svg" alt="">
                            <span>All Categories</span>
                            <i class="fa-solid fa-angle-down"></i>
                            <div class="categories d-none">
                                <ul>
                                    <li><a href=""><img src="~/assets/images/category's-headphone.png" alt="">Headphones</a><i class="fa-solid fa-chevron-right"></i></li>
                                    <li><a href=""><img src="~/assets/images/category's-mobile.png" alt="">Mobile Tablets</a><i class="fa-solid fa-chevron-right"></i></li>
                                    <li><a href=""><img src="~/assets/images/category's-pc.png" alt="">CPU Heat Pipes</a><i class="fa-solid fa-chevron-right"></i></li>
                                    <li><a href=""><img src="~/assets/images/category's-watch.png" alt="">Smart Watch</a><i class="fa-solid fa-chevron-right"></i></li>
                                    <li><a href=""><img src="~/assets/images/category's-bluetooth-headphones.png" alt="">Bluetooth</a><i class="fa-solid fa-chevron-right"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="header-navbar">
                            <ul>
                                <li><a href="">Home</a></li>
                                <li><a href="">Shop</a></li>
                                <li>
                                    <a href="" class="products-icon">Products<i class="fa-solid fa-angle-down"></i></a>
                                </li>
                                <li><a href="">Coupons</a></li>
                                <li><a href="">Blog</a></li>
                                <li><a href="">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="contact">
                            <img src="~/assets/icons/phone-icon.svg" alt="">
                            <div class="number">
                                <p>Hotline:</p>
                                <a href="">+(402) 763 282 46</a>
                            </div>
                        </div>
                    </div>
                    <div class="additional-navbar d-none">
                        <div class="row">
                            <div class="col-12">
                                <div class="navunder">
                                    <div class="row">
                                        <div class="col-3">
                                            <ul>
                                                <a href="">Shop Page</a>
                                                <li><a href="">Only Categories</a></li>
                                                <li><a href="">Shop Grid with Sidebar</a></li>
                                                <li><a href="">Shop Grid</a></li>
                                                <li><a href="">Categories</a></li>
                                                <li><a href="">Shop List</a></li>
                                                <li><a href="">Product Details</a></li>
                                            </ul>
                                        </div>
                                        <div class="col-3">
                                            <ul>
                                                <a href="">Shop Page</a>
                                                <li><a href="">Product Simple</a></li>
                                                <li><a href="">With Video</a></li>
                                                <li><a href="">With Countdown Timer</a></li>
                                                <li><a href="">Variations Swatches</a></li>
                                                <li><a href="">List View</a></li>
                                                <li><a href="">Details Gallery</a></li>
                                            </ul>
                                        </div>
                                        <div class="col-3">
                                            <ul>
                                                <a href="">Shop Page</a>
                                                <li><a href="">Shopping cart</a></li>
                                                <li><a href="">Track Your Order</a></li>
                                                <li><a href="">Compare</a></li>
                                                <li><a href="">Wishlist</a></li>
                                                <li><a href="">Checkout</a></li>
                                                <li><a href="">My Account</a></li>
                                            </ul>
                                        </div>
                                        <div class="col-3">
                                            <ul>
                                                <a href="">Shop Page</a>
                                                <li><a href="">About</a></li>
                                                <li><a href="">Login</a></li>
                                                <li><a href="">Register</a></li>
                                                <li><a href="">Forgot Password</a></li>
                                                <li><a href="">404 Error</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
    </header>
    @RenderBody()
    <footer>
        <section id="footer-up">
            <div class="container-main">
                <div class="row">
                    <div class="col-4">
                        <div class="left-side">
                            <div class="image">
                                <img src="~/assets/icons/logo.svg" alt="">
                            </div>
                            <p>We are a team of designers and developers that create high quality WordPress</p>
                            <div class="social-networks">
                                <a href=""><i class="fa-brands fa-facebook-f"></i></a>
                                <a href=""><i class="fa-brands fa-twitter"></i></a>
                                <a href=""><i class="fa-brands fa-linkedin-in"></i></a>
                                <a href=""><i class="fa-brands fa-vimeo-v"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="account">
                            <ul>
                                <h6>My Account</h6>
                                <li><a href="">Track Orders</a></li>
                                <li><a href="">Shipping</a></li>
                                <li><a href="">Wishlist</a></li>
                                <li><a href="">My Account</a></li>
                                <li><a href="">Order History</a></li>
                                <li><a href="">Returns</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="information">
                            <ul>
                                <h6>Information</h6>
                                <li><a href="">Our Story</a></li>
                                <li><a href="">Careers</a></li>
                                <li><a href="">Privacy Policy</a></li>
                                <li><a href="">Terms & Conditions</a></li>
                                <li><a href="">Latest News</a></li>
                                <li><a href="">Contact Us</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="contact-us">
                            <h6>Talk To Us</h6>
                            <span>Got Questions? Call us</span>
                            <a href="" class="number">+670 413 90 762</a>
                            <a href="" class="email"><img src="~/assets/icons/email-icon.svg" alt="">shofy@support.com</a>
                            <a href="" class="address"><img src="~/assets/icons/location-icon.svg" alt="">79 Sleepy Hollow St.<br>Jamaica, New York 1432</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <section id="footer-down">
            <div class="container-main">
                <div class="down">
                    <div class="row">
                        <div class="col-6">
                            <p>© 2024 All Rights Reserved | Angular Template by Themepure</p>
                        </div>
                        <div class="col-6">
                            <div class="payments">
                                <img src="~/assets/images/payments.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <div class="back-to-top">
            <a href=""><i class="fa-solid fa-angle-up arrow"></i></a>
        </div>

    </footer>









    <script src="https://kit.fontawesome.com/aa66850c3d.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="~/assets/js/home.js"></script>
</body>
</html>
